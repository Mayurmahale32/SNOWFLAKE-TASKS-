CREATE DATABASE DEMO;
CREATE SCHEMA DEMO_SCHEMA;

--always remember to alter session to your timezone--
ALTER SESSION SET TIMEZONE = 'Asia/Kolkata';

CREATE OR REPLACE TASK loading 
 WAREHOUSE = 'COMPUTE_WH'
 SCHEDULE = 'USING CRON 24 10 * * * Asia/Kolkata'
AS
 CREATE TABLE DEMO_TABLE_TT
(
ID STRING, 
FIRST_NAME STRING, 
AGE NUMBER
);

ALTER TASK loading RESUME;
SHOW TASKS;

-- TO GRANT ACCESS ON ROLE FOR CREATE TASK OR EXECUTE THE TASKS 
GRANT CREATE TASK ON SCHEMA DEMO_SCHEMA TO ROLE MANDA;
Grant EXECUTE TASK on account to role MANDA;

